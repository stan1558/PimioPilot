{
  "$id": "pimiopilot.strategy.output.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "schema_version",
    "signals"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "as_of": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object"
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "ts",
          "symbol"
        ],
        "properties": {
          "ts": {
            "type": "string",
            "format": "date-time"
          },
          "symbol": {
            "type": "string"
          },
          "action": {
            "enum": [
              "BUY",
              "SELL",
              "HOLD"
            ]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "target_weight": {
            "type": "number",
            "minimum": -1,
            "maximum": 1
          },
          "price_forecast": {
            "type": "object",
            "required": [
              "horizon",
              "price"
            ],
            "properties": {
              "horizon": {
                "type": "string"
              },
              "price": {
                "type": "number"
              }
            }
          },
          "extras": {
            "type": "object"
          }
        },
        "oneOf": [
          {
            "required": [
              "action"
            ]
          },
          {
            "required": [
              "target_weight"
            ]
          }
        ]
      }
    }
  }
}